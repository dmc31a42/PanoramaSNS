doctype html
html
  head
    meta(charset='utf-8')
    link(rel='stylesheet' href='https://cdn.pannellum.org/2.4/pannellum.css')
    script(src='https://cdn.pannellum.org/2.4/pannellum.js')
    script(src='https://code.jquery.com/jquery-3.3.1.js')
    script(type='text/javascript').
      var test;
  body
    if messages
      for message in messages
        a.alert(class='alert-' + message)
          p= message
    article
      div#panorama
      script(type='text/javascript').
        pannellum.viewer('panorama', {
          "type": "equirectangular",
          "panorama": "#{'/images/' + tempImage.id}",
          "autoLoad": true,
          "author": "#{user.displayName}"
        });
        $().ready(() => {
          $('#title').on('input', function(event){
            $('.pnlm-panorama-info').css('display','block');
            $('.pnlm-title-box').text($('#title').val());
          })
        })     
      style.
        html, body, #panorama {
          /* Height and width fallback for older browsers. */
          height: 100%;
          width: 100%;
          
          /* Set the height to match that of the viewport. */
          height: 100vh;
          
          /* Set the width to match that of the viewport. */
          width: 100vw;
          
          /* Remove any browser-default margins. */
          margin: 0;
        }
